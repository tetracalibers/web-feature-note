---
import ButtonDemo from "../button-demo.astro"

const css = `
@keyframes AddBoxShadow {
  0% {
    box-shadow: 0;
  }
  100% {
    box-shadow: 0 7px 10px rgba(0, 0, 0, 0.3);
  }
}`
---

<ButtonDemo css={css}>
  <button class="ef-AddBoxShadow">Animate box-shadow</button>
</ButtonDemo>

<style>
  .ef-AddBoxShadow {
    box-shadow: 0;
    transition-property: box-shadow;
    transition-duration: 0.5s;
    transition-timing-function: ease-out;
  }

  .ef-AddBoxShadow:hover {
    box-shadow: 0 7px 10px rgba(0, 0, 0, 0.3);
  }
</style>
