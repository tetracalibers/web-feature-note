---
import ButtonDemo from "../button-demo.astro"

const css = `
@keyframes AddBoxShadow {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}`
---

<ButtonDemo css={css}>
  <button class="ef-AddBoxShadow">Animate opacity</button>
</ButtonDemo>

<style>
  .ef-AddBoxShadow {
    position: relative;
  }

  .ef-AddBoxShadow::after {
    content: "";
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    box-shadow: 0 7px 10px rgba(0, 0, 0, 0.3);
    opacity: 0;
    transition-property: opacity;
    transition-duration: 0.5s;
    transition-timing-function: ease-out;
  }

  .ef-AddBoxShadow:hover::after {
    opacity: 1;
  }
</style>
