---
import ButtonDemo from "../button-demo.astro"

const css = `
@keyframes AddBoxShadow {
  0% {
    clip-path: inset(1px);
  }
  100% {
    clip-path: inset(-10px);
  }
}`
---

<ButtonDemo css={css}>
  <button class="ef-AddBoxShadow">Animate opacity</button>
</ButtonDemo>

<style>
  .ef-AddBoxShadow {
    position: relative;
  }

  .ef-AddBoxShadow::after {
    content: "";
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    padding: 7px;
    box-sizing: border-box;
    box-shadow: 0 7px 10px rgba(0, 0, 0, 0.3);
    clip-path: inset(1px);
    transition-property: clip-path;
    transition-duration: 0.5s;
    transition-timing-function: cubic-bezier(0.12, 0, 0.39, 0);
  }

  .ef-AddBoxShadow:hover::after {
    clip-path: inset(-10px);
  }
</style>
