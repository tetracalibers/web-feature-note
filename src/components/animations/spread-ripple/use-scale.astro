---
import ButtonDemo from "../button-demo.astro"

const css = `
@keyframes Ripple_useScale {
  0% {
    transform: scale(0, 0);
    opacity: 0;
  }
  100% {
    transform: scale(10, 10);
    opacity: 0.2;
  }
}
`
---

<ButtonDemo css={css}>
  <button class="ef-Ripple">animate scale</button>
</ButtonDemo>

<style>
  .ef-Ripple {
    background-color: var(--dark-color);
    color: var(--light-color);
    position: relative;
    overflow: hidden;
  }

  .ef-Ripple::before {
    content: "";
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    transform: scale(0, 0);
    transition-property: transform, opacity;
    transition-duration: 0.5s, 1s;
    transition-timing-function: ease-out;
    opacity: 0;
    background-image: radial-gradient(circle, #d2daff 10%, transparent 10%);
    background-repeat: no-repeat;
    background-position: center center;
    transform-origin: center center;
  }

  .ef-Ripple:hover::before {
    transform: scale(10, 10);
    opacity: 0.2;
  }
</style>
