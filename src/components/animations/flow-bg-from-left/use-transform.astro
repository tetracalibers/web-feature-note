---
import ButtonDemo from "../button-demo.astro"

const css = `
@keyframes FlowBg_useTransform {
  0% {
    transform-origin: left;
    transform: scaleX(0);
  }
  100% {
    transform-origin: left;
    transform: scaleX(1);
  }
}`
---

<ButtonDemo css={css}>
  <button class="ef-FlowBg">
    <div class="ef-FlowBg__inner">Animate Transform</div>
  </button>
</ButtonDemo>

<style>
  .ef-FlowBg {
    position: relative;
    color: var(--dark-color);
  }

  .ef-FlowBg__inner {
    position: relative;
    z-index: 2;
  }

  .ef-FlowBg::before {
    content: "";
    position: absolute;
    inset: 0;
    inline-size: 100%;
    block-size: 100%;
    background-color: #ecc5fb;
    transform: scaleX(0);
    transform-origin: left;
    z-index: 1;
    animation-name: returnSlide;
    animation-timing-function: var(--ease-out);
    animation-duration: 0.5s;
    animation-fill-mode: forwards;
  }

  .ef-FlowBg:hover::before {
    transform: scaleX(1);
    animation-name: slide;
    animation-timing-function: var(--ease-out);
    animation-duration: 0.5s;
    animation-fill-mode: forwards;
  }

  @keyframes slide {
    0% {
      transform: scaleX(0);
    }
    100% {
      transform: scaleX(1);
    }
  }

  @keyframes returnSlide {
    0% {
      transform: scaleX(1);
    }
    100% {
      transform: scaleX(0);
    }
  }
</style>
