---
import path from "node:path"
import Iframe from "./iframe.svelte"

interface Props {
  title: string
  pagePath: string
}

const { title, pagePath } = Astro.props
const url = new URL(path.join(import.meta.env.BASE_URL, pagePath), Astro.url.origin).href
---

<Iframe title={title} src={url} client:visible />
