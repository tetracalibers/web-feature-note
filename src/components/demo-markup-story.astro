---
interface Props {
  html: string
}

const { html } = Astro.props
---

<div class="story" set:html={html} />

<style>
  .story {
    max-width: 400px;
    margin: 0 auto;
    padding: 1rem;
    box-sizing: border-box;
    color: black;
  }
  .story > :global(*) {
    background: white;
  }
</style>
