---
import { Prism } from "@astrojs/prism"
import prettier from "prettier"

interface Props {
  style: string
}

const { style } = Astro.props
const code = prettier.format(`.clip{${style}}`, { parser: "css" })
---

<Prism lang="css" code={code} />

<div class="demo-space pd-1rem" style={style.replaceAll("\n", "")}>
  Lorem ipsum dolor sit amet, consectetuer adipiscin
</div>
