---
import TutorialPage from "@/layouts/TutorialPage.astro"
---

<TutorialPage title="丸がボタンに変形する">
  <div class="root"><button class="base ef-CircleToButton">Circle To Button</button></div>
</TutorialPage>

<style>
  .root {
    display: grid;
    min-height: 100vh;
    place-content: center;
  }

  button {
    appearance: none;
    border: 0;
    background: inherit;
    cursor: pointer;
  }

  .base {
    --bg-color: #ccc;
    --color: #333;
    padding-block: 0;
    padding-inline: 2em;
    width: fit-content;
    height: 100%;
    text-align: center;
    text-transform: uppercase;
    color: var(--color);
    position: relative;
    height: 4em;
  }

  .ef-CircleToButton::before {
    content: "";
    display: inline-block;
    background: var(--bg-color);
    clip-path: inset(0 calc(100% - 4em) 0 0 round 9999px);
    transform: translate(-2em, -50%);
    z-index: -1;
    width: 100%;
    height: 4em;
    position: absolute;
    top: 50%;
    transition: clip-path 0.3s ease-out;
    border-radius: 999px;
  }

  .ef-CircleToButton:hover::before {
    clip-path: inset(0);
  }
</style>
