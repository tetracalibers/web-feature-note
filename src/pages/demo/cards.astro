---
import Card from "@/demo/topic/card.astro"
import DemoPage from "@/layouts/DemoPage.astro"
import { Sprite } from "astro-icon"
---

<DemoPage title="Card Component Demo">
  <Sprite.Provider>
    <div class="ly-card">
      <Card />
    </div>
    <div class="ly-card">
      <Card />
      <Card />
    </div>
    <div class="ly-card">
      <Card />
      <Card />
      <Card />
    </div>
    <div class="ly-card ON-card-clip-image">
      <Card />
      <Card />
      <Card />
      <Card />
      <Card />
    </div>
  </Sprite.Provider>
</DemoPage>

<style>
  .ly-card {
    display: grid;
    gap: 20px;
    grid-template-columns: repeat(auto-fit, minmax(270px, 1fr));
    padding: 20px;
  }

  .ON-card-clip-image :global(.CardHeader__image) {
    clip-path: inset(1em 1em 0.5em round 20px);
  }
</style>
