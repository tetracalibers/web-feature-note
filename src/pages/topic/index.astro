---
import OtherPageLink from "@/components/link/other-page-link.astro"
import Layout from "@/layouts/Layout.astro"
import { getCollection } from "astro:content"

const posts = await getCollection("topic")
---

<Layout title="topics">
  <div class="root">
    <h1>Topics</h1>
    <ul>
      {
        posts.map(post => (
          <li>
            <OtherPageLink slugs={["topic", post.slug]}>{post.data.title}</OtherPageLink>
          </li>
        ))
      }
    </ul>
  </div>
</Layout>
